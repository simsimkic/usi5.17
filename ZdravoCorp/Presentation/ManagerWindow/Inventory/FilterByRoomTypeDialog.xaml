<Window x:Class="ZdravoCorp.Presentation.ManagerWindow.Inventory.FilterByRoomTypeDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ZdravoCorp.Presentation.ManagerWindow.Inventory"
        mc:Ignorable="d"
        Title="Filter By Room Type" Height="200" Width="400" WindowStartupLocation="CenterScreen">
    <Grid>
        <Label Content="Choose a room type:" HorizontalAlignment="Left" Margin="35,25,0,0" VerticalAlignment="Top" Height="32" Width="131"/>
        <ComboBox x:Name="RoomTypeComboBox" HorizontalAlignment="Left" Height="35" Margin="35,62,0,0" VerticalAlignment="Top" Width="196" SelectedValuePath="Content">
            <ComboBoxItem Content="Operation Room"/>
            <ComboBoxItem Content="Examination Room"/>
            <ComboBoxItem Content="Waiting Room"/>
            <ComboBoxItem Content="Patient Room"/>

        </ComboBox>
        <Button x:Name="SubmitButtonRoomType" Content="Submit" HorizontalAlignment="Left" Margin="222,114,0,0" VerticalAlignment="Top" Height="43" Width="155" IsEnabled="True" Click="SubmitButtonRoomType_Click"/>

    </Grid>
</Window>
