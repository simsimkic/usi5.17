<Window x:Class="ZdravoCorp.Presentation.ManagerWindow.Inventory.FilterByEquipmentTypeDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ZdravoCorp.Presentation.ManagerWindow.Inventory"
        mc:Ignorable="d"
        Title="Filter By Equipment Type" Height="200" Width="400" WindowStartupLocation="CenterScreen">
    <Grid>
        <Label Content="Choose an equipment type:" HorizontalAlignment="Left" Margin="45,29,0,0" VerticalAlignment="Top" Height="32" Width="195"/>
        <ComboBox x:Name="EquipmentTypeComboBox" HorizontalAlignment="Left" Height="35" Margin="45,57,0,0" VerticalAlignment="Top" Width="196" SelectedValuePath="Content">
            <ComboBoxItem Content="Operation"/>
            <ComboBoxItem Content="Examination"/>
            <ComboBoxItem Content="Furniture"/>
            <ComboBoxItem Content="Hallway"/>

        </ComboBox>
        <Button x:Name="SubmitButtonEquipmentType" Content="Submit" HorizontalAlignment="Left" Margin="222,114,0,0" VerticalAlignment="Top" Height="43" Width="155" IsEnabled="True" Click="SubmitButtonEquipmentType_Click"/>
    </Grid>
</Window>
