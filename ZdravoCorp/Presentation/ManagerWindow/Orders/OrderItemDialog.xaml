<Window x:Class="ZdravoCorp.Presentation.ManagerWindow.Orders.OrderItemDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ZdravoCorp.Presentation.ManagerWindow.Orders"
        mc:Ignorable="d"
        Title="Enter Order Quantity" Height="250" Width="400" WindowStartupLocation="CenterScreen">
    <Grid>
        <TextBox x:Name="OrderQuantityTextBox" HorizontalAlignment="Left" Height="35" Margin="62,102,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="195" PreviewTextInput="PreviewNumberInput"/>
        <Label Content="Enter the quantity for the order:" HorizontalAlignment="Left" Height="36" Margin="62,61,0,0" VerticalAlignment="Top" Width="205"/>
        <Button x:Name="SubmitOrderButton" Content="Submit" HorizontalAlignment="Left" Height="30" Margin="236,179,0,0" VerticalAlignment="Top" Width="154" Click="SubmitOrderButton_Click"/>

    </Grid>
</Window>
