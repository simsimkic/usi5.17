<Window x:Name="loginWindow" x:Class="ZdravoCorp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ZdravoCorp"
        mc:Ignorable="d"
        Title="ZdravoCorp" Height="450" Width="800" WindowStartupLocation="CenterScreen" Loaded="LoginWindow_Loaded" KeyDown="loginWindow_KeyDown">

    <Grid Loaded="LoginWindow_Loaded">
        <Label x:Name="loginLabel" Content="Login form" HorizontalAlignment="Center" Margin="0,38,0,0" VerticalAlignment="Top" Width="98" FontSize="36"/>
        <TextBox x:Name="usernameTextbox" VerticalContentAlignment="Center" HorizontalAlignment="Center" Height="45" Margin="0,132,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="422" FontSize="20" />
        <PasswordBox x:Name="passwordTextbox" VerticalContentAlignment="Center" HorizontalAlignment="Center" Height="45" Margin="0,218,0,0" VerticalAlignment="Top" Width="422" FontSize="20" />
        <Label x:Name="usernameLabel" Content="Username" HorizontalAlignment="Left" Margin="189,106,0,0" VerticalAlignment="Top" Width="159" FontSize="14" Opacity="0.8"/>
        <Label x:Name="passwordLabel" Content="Password" HorizontalAlignment="Left" Margin="189,189,0,0" VerticalAlignment="Top" Width="159" FontSize="14" Opacity="0.8"/>
        <Button x:Name="loginBtn" Content="Log in" HorizontalAlignment="Center" Height="49" Margin="0,297,0,0" VerticalAlignment="Top" Width="120" FontSize="20" Click="loginBtn_Click" Background="#FF2498E4" BorderBrush="#FF5591B7" Foreground="White" Cursor="Hand"/>
        <Label x:Name="errorLabel" Content="incorrect username or password" HorizontalAlignment="Left" Margin="403,263,0,0" VerticalAlignment="Top" Foreground="#FFD82828" FontSize="14" Visibility="Hidden"/>

    </Grid>
</Window>
